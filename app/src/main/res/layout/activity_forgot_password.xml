<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgotPasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/sharp_rect01"
        android:padding="10dp">
        <ImageButton
            android:id="@+id/iconbtnIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
         android:src="@drawable/ic_cack_icon_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recover Password"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iconIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/sharp_circle01"
        android:layout_marginTop="60dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_key_white"/>
    <EditText
        android:id="@+id/emailtext"
        android:layout_below="@id/iconIV"
        android:hint="Email"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_mail_icon"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect02"
        />

    <Button
        android:id="@+id/recoverButton"
        android:text="RECOVER"
        style="@style/Widget.AppCompat.Button.Colored"
        android:backgroundTint="@color/main01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailtext"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:minWidth="120dp"
        ></Button>


</RelativeLayout>